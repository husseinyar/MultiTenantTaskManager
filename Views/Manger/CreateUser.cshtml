@model MultiTenantTaskManager.ViewModel.CreateUserViewModel

@{
    ViewData["Title"] = "Create User";
}

<h1>Create User</h1>

<form asp-action="CreateUser" method="post" class="form-horizontal">
    <div class="form-group mb-3">
        <label asp-for="RegisterModel.Username" class="control-label"></label>
        <input asp-for="RegisterModel.Username" class="form-control" placeholder="Enter username" />
        <span asp-validation-for="RegisterModel.Username" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="RegisterModel.FullName" class="control-label"></label>
        <input asp-for="RegisterModel.FullName" class="form-control" placeholder="Enter full name" />
        <span asp-validation-for="RegisterModel.FullName" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="RegisterModel.Email" class="control-label"></label>
        <input asp-for="RegisterModel.Email" class="form-control" placeholder="Enter email" />
        <span asp-validation-for="RegisterModel.Email" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="RegisterModel.Password" class="control-label"></label>
        <input asp-for="RegisterModel.Password" class="form-control" type="password" placeholder="Enter password" />
        <span asp-validation-for="RegisterModel.Password" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="RegisterModel.TenantId" class="control-label"></label>
        <select asp-for="RegisterModel.TenantId" class="form-control" asp-items="Model.TenantIds"></select>
        <span asp-validation-for="RegisterModel.TenantId" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="RegisterModel.Role" class="control-label"></label>
        <select asp-for="RegisterModel.Role" class="form-control" asp-items="Model.Roles"></select>
        <span asp-validation-for="RegisterModel.Role" class="text-danger"></span>
    </div>
    <div class="form-group text-center">
        <button type="submit" class="btn btn-primary btn-lg">Create User</button>
    </div>
</form>
