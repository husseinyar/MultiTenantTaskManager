@model IEnumerable<MultiTenantTaskManager.ViewModel.UserViewModel>

@{
    ViewData["Title"] = "AdminM Dashboard";
}

<h1>Admin Dashboard</h1>
<p>
    <a asp-action="CreateUser" class="btn btn-primary">Create User</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.FullName)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Email)</p>
                    <p class="card-text"><strong>Username:</strong> @Html.DisplayFor(modelItem => item.UserName)</p>
                    <p class="card-text"><strong>Roles:</strong> @string.Join(", ", item.Roles)</p>
                    <p class="card-text"><strong>Tenant:</strong> @Html.DisplayFor(modelItem => item.TenantId)</p>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-primary" asp-action="EditUser" asp-route-id="@item.Id">Edit</a>
                        <form asp-action="DeleteUser" method="post" class="d-inline" onsubmit="return confirmDelete();">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    }
                  
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm('Are you sure you want to delete this user?');
        }
    </script>
}